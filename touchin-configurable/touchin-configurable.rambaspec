# Template information section
name: "touchin-configurable"
summary: "Swift MVVM module template using in TouchInstinct"
author: "Nikolay Ashanin, Nikita Krasnov"
version: "1.2"
license: "MIT"

# The declarations for code files

code_files:
# Assembly layer
- {name: Assembly/module_assembly.swift,  path: Code/Assembly/module_assembly.swift.liquid, custom_name: "{{module_info.name}}ModuleAssembly.swift"}
- {name: Assembly/module.swift,  path: Code/Assembly/module.swift.liquid, custom_name: "{{module_info.name}}Module.swift"}

# View layer
- {name: View/ViewController.swift,  path: Code/View/view_controller.swift.liquid, custom_name: "{{module_info.name}}ViewController.swift"}

# ViewModel layer
- {name: ViewModel/ViewModel.swift,  path: Code/ViewModel/view_model.swift.liquid, custom_name: "{{module_info.name}}ViewModel.swift"}
